    <div class="mb-screen">
      <div class="d-flex">
        <div class="flex-1 time">Welcome</div>
        <div class="hd-icons">
          <i class="fa fa-signal" aria-hidden="true"></i>
          <i class="fa fa-wifi" aria-hidden="true"></i>
          <i class="fa fa-battery-full" aria-hidden="true"></i>
        </div>
      </div>
      <div class="logo d-flex flex-center flex- animated zoomIn">
        <a href="/"<i class="fa fa-plane" aria-hidden="true" style="color:red"></i></a>
      </div>
      <div class="login-details">
        <div class="title animated fadeInLeft">
          <center>Login With Jetsave</center>
           
        </div>
        <form action="/travelogue-guest/all" method="post">

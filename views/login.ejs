        <div class="lg-btn d-flex flex-1 animated  fadeInRight">
          <button class="flex-1">Log In</button>

       
          
              
          </form>
          
        </div>
        <div class="lg-btn d-flex flex-1 animated  fadeInRight">
         <button class="flex-1"><a href="/signup" style="color: white;">Signup</a></button>
        
        
          
        
        </div>
      </div>
    
    </div>
    
  </div>
</div>

